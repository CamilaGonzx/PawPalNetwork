<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Color de fondo -->
    <solid android:color="@color/white" /> <!-- Gris claro (#E0E0E0), puedes ajustarlo según tu diseño -->

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" /> <!-- Ajusta el radio de las esquinas según lo que desees -->

    <!-- Opcional: Añadir un borde si lo deseas -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Gris más oscuro para el borde opcional -->
</shape>
