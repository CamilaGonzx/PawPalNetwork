<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvNombreServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Servicio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedor: Nombre del Proveedor"
            android:textSize="14sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve del servicio..."
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación: Toluca"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvCalificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calificación: ★★★★☆"
            android:textSize="12sp"
           />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>