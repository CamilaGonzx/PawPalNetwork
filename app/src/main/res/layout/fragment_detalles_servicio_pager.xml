<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuario.detalles.DetallesServicioPager">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lluserd"
                    android:orientation="horizontal">

                    <!-- Imagen de perfil -->
                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
android:background="@drawable/rounded_image_background"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNombreUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="Nombre" />

                        <TextView
                            android:id="@+id/tvCalificacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:drawableStart="@drawable/estrella_circular_18"
                            android:drawablePadding="10dp"
                            android:text="5estrellas" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <!-- Título de la sección de servicios -->
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicio ofrecido"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"

                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:id="@+id/imgserv"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/veterinario"/>
                    <TextView
                        android:id="@+id/tvServicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Veterinario"
                        android:textColor="@color/verde_menta"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>
                <!-- Descripción del usuario -->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción del servicio"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lore_ipsum"
                    />
                <!-- Botones de acción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAgendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agendar"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>