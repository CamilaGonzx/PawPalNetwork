<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dias_rounded"
    android:layout_margin="2dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">

    <!-- Nombre abreviado del día (ej., LUN) -->
    <TextView
        android:id="@+id/tvDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUN"
        android:textSize="12sp"
        android:textColor="#555555"
        android:textStyle="bold" />

    <!-- Número del día (ej., 10) -->
    <TextView
        android:id="@+id/tvDayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Indicador de contratación -->
    <ImageView
        android:id="@+id/ivContractIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:background="@drawable/ic_indicador_contrato" />
</LinearLayout>


