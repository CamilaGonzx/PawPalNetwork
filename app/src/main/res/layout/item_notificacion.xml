<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tituloNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la contratación"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/estadoNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_estado_noti"
                android:textStyle="bold"
                android:text="Pendiente"
                android:textColor="@color/white" />
            </LinearLayout>


            <TextView
                android:id="@+id/descripcionNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción breve del servicio"
                android:textSize="14sp"
                android:textColor="#666" />


            <TextView
                android:id="@+id/fechaHoraNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y Hora"
                android:textSize="12sp"
                android:textColor="#999" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
