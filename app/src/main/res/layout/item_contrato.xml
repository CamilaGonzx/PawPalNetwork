<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título de la contratación"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/estadoNotificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_estado_noti"
                    android:textStyle="bold"
                    android:text="Pendiente"
                    android:textColor="@color/white" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_account_box_24"
                android:drawablePadding="17dp"
                android:text="Cliente"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendario"
                android:drawablePadding="17dp"
                android:text="Hora"
                android:textSize="14sp"
                android:textColor="#999" />

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="17dp"

                android:text="Ubicacion"
                android:textSize="14sp"
                android:textColor="#666" />
            <TextView
                android:id="@+id/tvHorasContratadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_reloj"
                android:drawablePadding="17dp"
                android:text="Horas Contratadas"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
